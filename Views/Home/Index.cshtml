@model IEnumerable<Examen3.Models.Hamburguesa>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-center mt-3">
            <h1 class="titulo">Chungus Burguers</h1>
        </div>
        <div class="col-12 d-flex justify-content-center mt-3">
            <p class="eslogan">Las hamburguesas más ricas. Como le gustan a Big Chungus</p>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <div class="titulo-divisor"></div>
        </div>
    </div>
</div>

<div id="carousel" class="carousel slide" data-bs-ride="carousel">
  <ol class="carousel-indicators">
    <li data-bs-target="#carousel" data-bs-slide-to="0" class="active"></li>
    <li data-bs-target="#carousel" data-bs-slide-to="1"></li>
    <li data-bs-target="#carousel" data-bs-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="~/imagenes/sliders/refrescosChungus.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="~/imagenes/sliders/big_chunguSlide.jpg" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="~/imagenes/sliders/cabecera-hamburguesas.jpg" class="d-block w-100" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-bs-hidden="true"></span>  
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-bs-hidden="true"></span>   
  </button>
</div>
<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-center mt-3">
            <h2 class="titulo">Los Favoritos</h2>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <div class="titulo-divisor"></div>
        </div>
    </div>
    <div class="row">
        @if (Model.Count()>0){
            @foreach (var hamburguesa in Model.OrderBy(o => o.Id))
            {
                <div class="col-sm-12 col-md-4">
                    <div class="card" style="width: 18rem;">
                        <img src="/@hamburguesa.ImagenHamburguesa" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">@hamburguesa.Nombre</h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">@Html.DisplayNameFor(model => model.Precio) : @hamburguesa.Precio</li>
                        </ul>
                        <div class="card-body">
                            <button class="boton-chido">
                                <a asp-controller="Hamburguesas" asp-action="Details" asp-route-id="@hamburguesa.Id">Ver detalles</a>
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
