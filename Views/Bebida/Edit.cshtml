@model Examen3.Models.Bebida

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bebida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoPlatillo" class="control-label"></label>
                <select asp-for="IdTipoPlatillo" class="form-control" asp-items="ViewBag.IdTipoPlatillo"></select>
                <span asp-validation-for="IdTipoPlatillo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenBebida" class="control-label"></label>
                <input type="file" asp-for="ImagenBebida" class="form-control" />
                <span asp-validation-for="ImagenBebida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="/@Model.ImagenBebida"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

